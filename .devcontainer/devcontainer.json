// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Data Platform",
	"build": {
		"dockerfile": "Dockerfile",
		"options": [
			"--secret", "id=env-file,src=.env"
		]
	},
	"runArgs": [
		"--env-file", ".env",
		"--env", "DAGSTER_HOME=/workspaces/data-platform/.dagster_home",
		"--env", "PROJECT_DIR=/workspaces/data-platform/packages/data_foundation/dbt"
	],
	"mounts": [
		"source=uv-cache-volume,target=/home/vscode/.cache/uv,type=volume",
		"source=vsc-extensions-volume,target=/home/vscode/.vscode-server/extensions,type=volume"
	],
	"forwardPorts": [3000],
	"postCreateCommand": [],
	"customizations": {
		"vscode": {
			"extensions": [
				// "dbtlabsinc.dbt",
				"samuelcolvin.jinjahtml",
				"ms-python.python",
				"tamasfe.even-better-toml",
				"ms-toolsai.jupyter",
				"ms-python.vscode-pylance",
				"charliermarsh.ruff",
				"snowflake.snowflake-vsc",
				"dorzey.vscode-sqlfluff",
				"ptweir.python-string-sql",
				"ms-python.vscode-python-envs",
				"wholroyd.jinja",
				"tumido.cron-explained",
				"innoverio.vscode-dbt-power-user",
				"redhat.vscode-yaml"
			]
		},
		"settings": {
			"editor.snippetSuggestions": "bottom",
			"yaml.schemas": {
				"/workspaces/data-platform/.yaml/dlthub/sources.json": "**/dlthub/**/*.yaml",
				"/workspaces/data-platform/.yaml/sling/connections.json": "**/sling/**/connections.yaml",
				"/workspaces/data-platform/.yaml/sling/replication.json": "**/sling/**/*replication*.yaml"
			},
			"sqlfluff.dbtInterface.enabled": false,
			"sqlfluff.dialect": "",
			"sqlfluff.linter.run": "onSave",
			"sqlfluff.suppressNotifications": false,
			"snowflake.connectionsConfigFile": "/home/vscode/.config/snowflake/",
			"sqlfluff.executablePath": "/usr/local/lib/python3.12/site-packages",
			"dbt.dbtPath": "/usr/local/bin/dbt",
			"dbt.flag.state": "./state",
			"dbt.beta.useQueryCache": true,
			"dbt.enableCollaboration": false,
			"dbt.enableNotebooks": false,
			"dbt.installDepsOnProjectInitialization": false,
			"dbt.dbtIntegration": "fusion",
			"dbt.fileNameTemplateGenerateModel": "{prefix}_{sourceName}__{tableName}",
			"dbt.prefixGenerateModel": "stg",
			"python.terminal.useEnvFile": true,
			"dbt.enableNewLineagePanel": true,
			"dbt.deferConfigPerProject": {
				"packages/data_foundation/dbt": {
					"manifestPathForDeferral": "/workspaces/data-platform/packages/data_foundation/dbt/state",
					"manifestPathType": "local",
					"favorState": false,
					"deferToProduction": true
				}
			},
			"python-envs.pythonProjects": [
				{
					"path": "libs/analytics_utils",
					"envManager": "ms-python.python:venv",
					"packageManager": "ms-python.python:pip"
				},
				{
					"path": "libs/data_platform_utils",
					"envManager": "ms-python.python:venv",
					"packageManager": "ms-python.python:pip"
				},
				{
					"path": "packages/data_analytics",
					"envManager": "ms-python.python:venv",
					"packageManager": "ms-python.python:pip"
				},
				{
					"path": "packages/data_foundation",
					"envManager": "ms-python.python:venv",
					"packageManager": "ms-python.python:pip"
				},
				{
					"path": "packages/data_science",
					"envManager": "ms-python.python:venv",
					"packageManager": "ms-python.python:pip"
				}
			],
			"cSpell.words": [
				"binutils",
				"dataframe",
				"dataframes",
				"dbtlabsinc",
				"devconatainer",
				"devcontainers",
				"dlthub",
				"dotenv",
				"ipykernel",
				"ipython",
				"isort",
				"mkdocs",
				"mkdocstrings",
				"numpy",
				"onehot",
				"openml",
				"powerbi",
				"psutil",
				"pyarrow",
				"pycache",
				"pycodestyle",
				"Pyflakes",
				"pygwalker",
				"pyproject",
				"pyupgrade",
				"setuptools",
				"Snowpark",
				"sqlalchemy",
				"sqlfluff",
				"templater",
				"usecwd",
				"venv",
				"xgboost"
			],
			"python.testing.pytestArgs": [
				".",
				"--disable-warnings"
			],
			"python.testing.unittestEnabled": false,
			"python.testing.pytestEnabled": true
		}
	}
}
